<%- include('../partials/header')  %> 

<% if (locals.banner) { %>
<section class="banner" style="background-image: url('images/<%= banner.background %>')">
   <%= banner.title %> 
</section>
<h2><%= banner.title %>  disponíveis para adoção</h2>
<% } %>

<% if (locals.list != '') { %>
   <div class="container list">
      <% list.forEach(pet => { %>
         <div class="item">
            <img src="images/<%= pet.image %>" class="item--image" />
            <div class="item--name"><%= pet.name %> </div>
            <div class="item--color">Cor: <%= pet.color %> </div>
            <div class="item--genre">Gênero: <%= pet.sex %> </div>
         </div>
      <% }) %> 
   </div>
<% } else { %>
   <div class="container no-list">
      <h2>Nenhum animal encontrado.</h2>
   </div>
<% } %> 


<%- include('../partials/footer')  %> 